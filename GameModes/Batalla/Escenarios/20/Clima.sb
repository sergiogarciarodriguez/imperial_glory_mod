  [.FILE "Models\Criaturas\Aves\BandadaPajarillos02.V3D" .POS [0.0 5000.0 0.0]]
  [.FILE "Models\Criaturas\Aves\BandadaPajarillos03.V3D" .POS [0.0 5000.0 0.0]]
  [.FILE "Models\Criaturas\Aves\Halcon.V3D" .POS [0.0 8000.0 0.0]]
